# App
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/retail_app?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-min-32-chars-change-in-production
BETTER_AUTH_URL=http://localhost:3001
API_URL=http://localhost:3001

# OAuth (opcional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Cookies
COOKIE_DOMAIN=localhost

# Email / Notifications
# Para desarrollo: usar MailHog (localhost:1025, web UI en localhost:8025)
# Para producción: configurar SMTP real (SendGrid, Amazon SES, etc.)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@retail-app.com

# Application URL (usado en links de emails)
APP_URL=http://localhost:3000

# JWT (deprecated - usar better-auth)
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Mercado Pago
# Obtener credenciales en: https://www.mercadopago.com.ar/developers/panel/app
# Para testing: usar credenciales de TEST (comienzan con TEST-)
MERCADO_PAGO_ACCESS_TOKEN=APP_USR-your-access-token
MERCADO_PAGO_PUBLIC_KEY=APP_USR-your-public-key
MERCADO_PAGO_WEBHOOK_URL=https://your-domain.com/api/v1/payments/webhooks/mercadopago
MERCADO_PAGO_WEBHOOK_SECRET=your-webhook-secret

# AFIP - Facturación Electrónica Argentina
# Documentación completa: docs/argentina/AFIP-setup-guide.md
# Obtener certificados en: https://auth.afip.gob.ar (Clave Fiscal nivel 3+)

# CUIT del negocio (11 dígitos sin guiones)
AFIP_CUIT=20123456789

# Punto de venta electrónico (número asignado por AFIP)
AFIP_PUNTO_VENTA=1

# Ambiente: false = Homologación (testing), true = Producción
AFIP_PRODUCTION=false

# Rutas a los certificados (absolutos o relativos desde apps/ar/certs/)
# Para testing: usar cert-test.pem y key-test.pem
# Para producción: usar cert.pem y key.pem
AFIP_CERT_PATH=./certs/cert-test.pem
AFIP_KEY_PATH=./certs/key-test.pem

# Certificados de producción (descomentar cuando esté en producción)
# AFIP_CERT_PATH=./certs/cert.pem
# AFIP_KEY_PATH=./certs/key.pem

# CRÍTICO: Los certificados tienen vencimiento (generalmente 2 años)
# Configurar alertas 30 días antes del vencimiento
