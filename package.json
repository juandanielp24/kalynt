{
  "name": "retail-super-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:api": "turbo run dev --filter @retail/api",
    "dev:web": "turbo run dev --filter @retail/web",
    "dev:mobile": "turbo run dev --filter @retail/mobile",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:setup": "./scripts/setup-test-db.sh",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "turbo run db:generate --filter @retail/database",
    "db:migrate": "turbo run db:migrate --filter @retail/database",
    "db:seed": "turbo run db:seed --filter @retail/database",
    "db:studio": "turbo run db:studio --filter @retail/database",
    "db:reset": "turbo run db:reset --filter @retail/database",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "./dev.sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "dotenv": "^17.2.3",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.0"
}
