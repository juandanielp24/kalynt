# Environment for testing
NODE_ENV=test

# Database (use separate DB for tests)
DATABASE_URL="postgresql://retail_user:retail_password_dev@localhost:5432/retail_app_test?schema=public"

# API
API_URL=http://localhost:3001
BASE_URL=http://localhost:3000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Better Auth
BETTER_AUTH_SECRET=test-secret-key-min-32-chars-long-for-testing
BETTER_AUTH_URL=http://localhost:3001
JWT_SECRET=test-jwt-secret-key-min-32-chars
JWT_EXPIRES_IN=7d

# Cookies
COOKIE_DOMAIN=localhost

# Email / Notifications (use MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=test@retail-app.com
APP_URL=http://localhost:3000

# AFIP (testing mode)
AFIP_PRODUCTION=false
AFIP_CUIT=20409378472
AFIP_PUNTO_VENTA=1
AFIP_CERT_PATH=./certs/cert-test.pem
AFIP_KEY_PATH=./certs/key-test.pem

# Mercado Pago (sandbox)
MERCADO_PAGO_ACCESS_TOKEN=TEST-token
MERCADO_PAGO_PUBLIC_KEY=TEST-public-key
MERCADO_PAGO_WEBHOOK_URL=http://localhost:3001/api/v1/payments/webhooks/mercadopago
MERCADO_PAGO_WEBHOOK_SECRET=test-webhook-secret

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=1000

# Feature flags
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=false
